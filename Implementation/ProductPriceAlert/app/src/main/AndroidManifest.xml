<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.productpricealert">

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProductPriceAlert"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.activities.AddProductActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.activities.RegisterUserActivity"
            android:exported="true" />
        <activity android:name="com.activities.LoginUserActivity"/>
        <activity
            android:name="com.activities.ProductDetailsActivity"
            android:exported="true" />
        <activity
            android:name="com.activities.BrowseProducts"
            android:exported="true" />


        <activity
            android:name="com.activities.HomePageActivity"
            android:exported="true" />
        <activity
            android:name="com.activities.FilterProductsActivity"
            android:exported="true" />

        <activity
            android:name="com.activities.MainActivity"
            android:exported="true" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.productpricealert.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>
    </application>

</manifest>