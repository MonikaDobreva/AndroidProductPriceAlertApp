<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/purple_50"
    android:layout_height="match_parent"
    tools:context="com.ProductPriceAlert.com.activities.ShowFilteredProductsActivity">

    <ListView
        android:id="@+id/filterList"
        android:layout_width="411dp"
        android:layout_height="513dp"
        android:layout_marginTop="132dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewFilter"
        android:layout_width="333dp"
        android:layout_height="72dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:text="@string/showFilter"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backToBrowseFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:layout_marginTop="20dp"
        android:text="@string/backToAll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filterList" />
</androidx.constraintlayout.widget.ConstraintLayout>